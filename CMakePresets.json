{
	"version": 3,

	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 22,
		"patch": 1
	},

	"configurePresets": [
	{
		"name": "base",
		"description": "Base configuration",
		"hidden": true,
		"generator": "Ninja",
		"cacheVariables": {
			"CMAKE_EXPORT_COMPILE_COMMANDS": {
				"type": "BOOL",
				"value": "ON"
			}
		}
	},
	{
		"name": "debug-build",
		"description": "Build in Debug mode",
		"hidden": true,
		"inherits": "base",
		"cacheVariables": {
			"CMAKE_BUILD_TYPE": {
				"type": "STRING",
				"value": "Debug"
			}
		}
	},
	{
		"name": "rel-build",
		"description": "Build in Release mode",
		"hidden": true,
		"inherits": "base",
		"cacheVariables": {
			"CMAKE_BUILD_TYPE": {
				"type": "STRING",
				"value": "Release"
			}
		}
	},
	{
		"name": "gcc-toolchain",
		"description": "Use the arm-none-eabi-gcc toolchain",
		"hidden": true,
		"toolchainFile": "${sourceDir}/cmake/arm-none-eabi-gcc.cmake"
	},
	{
		"name": "example-blinky",
		"description": "Build the blinky example",
		"hidden": true,
		"cacheVariables": {
			"MSPM0C1104_BUILD_BLINKY_EXAMPLE": {
				"type": "BOOL",
				"value": "ON"
			}
		}
	},
	{
		"name": "example-led-toggle-push-button",
		"description": "Build the blinky example",
		"hidden": true,
		"cacheVariables": {
			"MSPM0C1104_BUILD_LED_TOGGLE_PUSH_BUTTON_EXAMPLE": {
				"type": "BOOL",
				"value": "ON"
			}
		}
	},
	{
		"name": "build-example-dbg-blinky-gcc",
		"description": "Build the blinky example in Debug mode using the GCC toolchain",
		"binaryDir": "${sourceDir}/cmake-build-example-dbg-blinky-gcc",
		"inherits": ["debug-build", "gcc-toolchain", "example-blinky"]
	},
	{
		"name": "build-example-rel-blinky-gcc",
		"description": "Build the blinky example in Release mode using the GCC toolchain",
		"binaryDir": "${sourceDir}/cmake-build-example-rel-blinky-gcc",
		"inherits": ["rel-build", "gcc-toolchain", "example-blinky"]
	},
	{
		"name": "build-example-dbg-led-toggle-push-button-gcc",
		"description": "Build the led-toggle-push-button example in Debug mode using the GCC toolchain",
		"binaryDir": "${sourceDir}/cmake-build-example-dbg-led-toggle-push-button-gcc",
		"inherits": ["debug-build", "gcc-toolchain", "example-led-toggle-push-button"]
	},
	{
		"name": "build-example-rel-led-toggle-push-button-gcc",
		"description": "Build the led-toggle-push-button example in Release mode using the GCC toolchain",
		"binaryDir": "${sourceDir}/cmake-build-example-led-toggle-push-button-gcc",
		"inherits": ["rel-build", "gcc-toolchain", "example-led-toggle-push-button"]
	}
	]
}
